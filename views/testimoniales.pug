extends ./layouts/index

block contenido
    main(class="w-[1200px] mx-auto")
        h1(class="font-title text-5xl text-indigo-800 my-8 text-center tracking-widest")= pagina

        div 
            h2(class="text-2xl font-subtitle text-center mb-5") Agrega un testimonial
            div(class="w-1/2 mx-auto") 
                form(action="" method="POST")
                    div(class="mb-6")
                        label(for="nombre" name="nombre" class="block mb-2 text-sm font-medium text-gray-700") Nombre 
                        input#nombre(type="text" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Nombre" required)
                    div(class="mb-6")
                        label(for="email" name="email" class="block mb-2 text-sm font-medium text-gray-700") Email 
                        input#email(type="email" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Email" required)                
                    div(class="mb-6")
                        label(for="mensaje" class="block mb-2 text-sm font-medium text-gray-700") Mensaje 
                        textarea#mensaje(name="mensaje", rows="5" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Tu mensaje" required)
                    button(class="w-full relative inline-flex items-center justify-center p-0.5 mb-6 mr-2 overflow-hidden text-sm font-medium text-gray-700 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-gray-900 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800")
                        span(class="w-full relative text-base px-5 py-2.5 transition-all ease-in duration-75 bg-white rounded-md group-hover:bg-opacity-0") Enviar